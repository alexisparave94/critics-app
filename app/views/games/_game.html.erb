<div id="<%= dom_id game %>">
  <h1>
    <%= game.name %>
  </h1>
  <p>
    <% if game.release_date %>
      <span><%= game.release_date.year %></span>
    <% end %>
  </p>

  <p>
    <%= game.rating %>
  </p>

  <div class="details_section">
    <h3>Game Details</h3>
    <p>
      <%= game.summary %>
    </p>

    <h4>Genres</h4>
    <h4>Platforms</h4>
    <h4>Developers</h4>
    <h4>Publishers</h4>

    <h2>Add relations</h2>
  </div>

  <div class="critics_section">
    <h3>Critics (<%= game.critics_count %>)</h3>
  </div>

</div>
